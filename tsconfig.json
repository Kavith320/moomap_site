{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "app/page.jsx",
    "app/layout.js"
, "app/layout.jsx", "app/components/Navbar.jsx", "app/(sections)/hero/Hero.jsx", "app/(sections)/pricing/Pricing.jsx", "app/(sections)/contact/Contact.jsx", "app/(sections)/about/About.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}